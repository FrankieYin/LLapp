<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/project_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:text="1 - " />

    <TextView
        android:id="@+id/project_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czech it out!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/project_count"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/project_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by chiku"
        android:layout_toRightOf="@+id/project_full_name"
        android:layout_toEndOf="@+id/project_full_name"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/project_full_name"/>

    <TextView
        android:id="@+id/project_num_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 recordings"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/project_full_name"
        android:layout_marginRight="7dp"/>

    <TextView
        android:id="@+id/project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/project_count"
        android:layout_alignRight="@+id/project_num_recording"
        android:layout_below="@+id/project_full_name"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Many people including the Czechs themselves don't realise how many different languages are spoken in the Czech Republic. The only official language - Czech - is by far not the only one spoken there. This project therefore tries to give a voice to lesser acknowledged languages and map the true language landscape of the country." />

</RelativeLayout>