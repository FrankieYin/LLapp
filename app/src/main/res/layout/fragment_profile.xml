<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="georgia.languagelandscape.fragments.ProfileFragment"
    android:background="@android:color/background_light"
    tools:background="@android:color/white">

    <TextView
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:textAlignment="center"
        android:layout_marginTop="20px"
        android:textSize="90px"
        android:textStyle="bold"
        android:id="@+id/textView5" />

    <TextView
        android:text="Username:"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="200px"
        android:layout_marginLeft="30dp"
        android:textSize="60px"
        android:id="@+id/textView3" />

    <Button
        android:text="Take me there!"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="350px"
        android:layout_marginLeft="420px"
        android:id="@+id/button_recordings"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:clickable="true"/>

    <TextView
        android:text="Recordings uploaded:"
        android:layout_width="550px"
        android:layout_height="150px"
        android:layout_marginTop="350px"
        android:layout_marginLeft="30dp"
        android:textSize="60px"
        android:id="@+id/textView4" />

    <TextView
        android:text="My projects:"
        android:layout_width="250px"
        android:layout_height="150px"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="560px"
        android:textSize="60px"
        android:id="@+id/textView6" />

    <Button
        android:text="Lets see!"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="560px"
        android:layout_marginLeft="420px"
        android:id="@+id/button_projects"
        android:clickable="true"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/main_background"
        />;

</FrameLayout>
