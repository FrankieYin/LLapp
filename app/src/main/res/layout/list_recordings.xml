<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/recordingList_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        tools:text="1 - " />

    <TextView
        android:id="@+id/recordingList_title"
        tools:text="Seagull song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/recordingList_count"
        android:layout_toLeftOf="@+id/recordingList_more"
        android:layout_alignBottom="@+id/recordingList_count"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/recordingList_speakers"
        android:text="@string/speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordingList_location"
        android:layout_alignLeft="@+id/recordingList_count"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/recordingList_speakers_content"
        tools:text="OLGA TAJBAREJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordingList_speakers"
        android:layout_toRightOf="@+id/recordingList_speakers"
        android:layout_toEndOf="@+id/recordingList_speakers"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/recordingList_languages"
        android:text="@string/recordingList_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordingList_speakers"
        android:layout_alignLeft="@+id/recordingList_count"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/recordingList_languages_content"
        tools:text="TUNDRA NENETS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recordingList_languages"
        android:layout_alignBottom="@+id/recordingList_languages"
        android:layout_toRightOf="@+id/recordingList_languages"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/recordingList_location"
        android:text="@string/recordingList_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordingList_title"
        android:layout_alignLeft="@+id/recordingList_count"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/recordingList_location_content"
        tools:text="NEL'MIN NOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recordingList_location"
        android:layout_toRightOf="@+id/recordingList_location"
        android:layout_marginLeft="12dp"/>

    <Button
        android:id="@+id/recordingList_more"
        android:background="@drawable/ic_more_vert_black_24dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/recordingList_title"/>

    <TextView
        android:id="@+id/recordingList_date"
        tools:text="15/07/2004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordingList_languages_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>